@model Product

<form method="post">
	<div>	
		<h3>Изменение продукта</h3>
	</div>

	<div class="text-danger font-weight-bold" asp-validation-summary="All"></div>

	<input type="hidden" name="Id" value="@Model?.Id" />

	<div class="form-floating">
		<div class="col-6">
			<label asp-for="Name">Наименование продукта</label><br />
			<input class="form-control" asp-for="Name" value="@Model?.Name" />
			<span asp-validation-for="Name" />
		</div>
	</div>

	<div class="form-floating">
		<div class="col-6">
			<label asp-for="Description">Описание продукта</label><br />
			<input class="form-control" asp-for="Description" value="@Model?.Description" />
			<span asp-validation-for="Description" />
		</div>
	</div>
	<div class="form-floating">
		<div class="col-6">
			<label asp-for="Cost">Цена продукта</label><br />
			<input class="form-control" asp-for="Cost" value="@Model?.Cost" />
			<span asp-validation-for="Cost" />
		</div>
	</div>
	<div class="form-floating">
		<div class="col-6">
			<label asp-for="ImagePath">Изображение продукта</label><br />
			<input class="form-control" asp-for="ImagePath" value="@Model?.ImagePath" />
			<span asp-validation-for="ImagePath" />
		</div>
	</div>
	<div>
		<button type="submit" asp-controller="Admin" asp-action="EditProduct">Изменить</button>
	</div>
</form>